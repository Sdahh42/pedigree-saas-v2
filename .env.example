# ===========================================
# PedigreeApp SaaS v2 - Variables d'environnement
# ===========================================
# Copiez ce fichier vers .env.local et remplissez les valeurs

# ----- Application -----
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=PedigreeApp

# ----- Base de données PostgreSQL -----
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://postgres:password@localhost:5432/pedigree_db?schema=public"

# ----- Redis (Cache & Sessions) -----
REDIS_URL="redis://localhost:6379"

# ----- NextAuth.js -----
# Générer avec: openssl rand -base64 32
NEXTAUTH_SECRET="votre-secret-nextauth-a-generer"
NEXTAUTH_URL=http://localhost:3000

# ----- Stripe (Paiements) -----
# Clés disponibles sur https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# IDs des prix Stripe (créés dans le dashboard Stripe)
STRIPE_PRICE_PRO_MONTHLY=price_xxx
STRIPE_PRICE_PRO_YEARLY=price_xxx
STRIPE_PRICE_ELITE_MONTHLY=price_xxx
STRIPE_PRICE_ELITE_YEARLY=price_xxx

# ----- Resend (Emails) -----
# Clé API disponible sur https://resend.com/api-keys
RESEND_API_KEY=re_xxx
EMAIL_FROM=noreply@pedigreeapp.com

# ----- UploadThing (Upload de fichiers) -----
# Clés disponibles sur https://uploadthing.com/dashboard
UPLOADTHING_SECRET=sk_live_xxx
UPLOADTHING_APP_ID=xxx

# ----- OAuth Providers (Optionnel) -----
# Google OAuth - https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=xxx
GOOGLE_CLIENT_SECRET=xxx

# ----- Sentry (Monitoring - Optionnel) -----
# DSN disponible sur https://sentry.io
SENTRY_DSN=https://xxx@sentry.io/xxx
NEXT_PUBLIC_SENTRY_DSN=https://xxx@sentry.io/xxx

# ----- Développement -----
# Activer les logs détaillés
DEBUG=false
